
@{
    ViewBag.Title = "Index";

}

<div class="row match-height" ng-controller="MedicineInformationControllerList">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="basic-layout-form-center">Medicine Information List</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">

                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>

                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <a class="btn btn-success" href="~/MedicineInformation/Create">Add Medicine Information</a>
                    <table datatable="ng" dt-options="MedicineInformationControllerList.dtOptions" dt-column-defs="MedicineInformationControllerList.dtColumnDefs" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Price</th>
                                <th>Unit Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="MedicineInformation in MedicineInformations">

                                <td>{{ MedicineInformation.MedicineName }}</td>
                                <td>{{ MedicineInformation.Price }}</td>
                                <td>{{ MedicineInformation.UnitTypeName }}</td>
                                <td><a class="btn btn-sm btn-success" href="~/MedicineInformation/Edit?id={{MedicineInformation.MedicineID}}">Edit</a></td>
                            </tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

