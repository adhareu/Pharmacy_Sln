
@{
    ViewBag.Title = "Index";

}

<div class="row match-height" ng-controller="CustomerInformationControllerList">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="basic-layout-form-center">Customer Information List</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">

                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>

                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <a class="btn btn-success" href="~/CustomerInformation/Create">Add Customer Information</a>
                    <table datatable="ng" dt-options="CustomerInformationControllerList.dtOptions" dt-column-defs="CustomerInformationControllerList.dtColumnDefs" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                               
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="CustomerInformation in CustomerInformations">

                                <td>{{ CustomerInformation.CustomerName }}</td>
                                <td>{{ CustomerInformation.Age }}</td>
                                <td>{{ CustomerInformation.GenderName }}</td>
                                <td><a class="btn btn-sm btn-success" href="~/CustomerInformation/Edit?id={{CustomerInformation.CustomerID}}">Edit</a></td>
                            </tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

