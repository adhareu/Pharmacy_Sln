
@{
    ViewBag.Title = "Index";

}

<div class="row match-height" ng-controller="SalesInformationControllerList">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="basic-layout-form-center">Sales Information List</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">

                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>

                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <a class="btn btn-success" href="~/SalesInformation/Create">Add Sales Information</a>
                    <table datatable="ng" dt-options="SalesInformationControllerList.dtOptions" dt-column-defs="SalesInformationControllerList.dtColumnDefs" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Invoice No</th>
                                <th>Customer Name</th>
                              
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="SalesInformation in SalesInformations">

                                <td>{{ SalesInformation.SalesName }}</td>
                                <td>{{ SalesInformation.InvoiceNo }}</td>
                                <td>{{ SalesInformation.CustomerName }}</td>
                                
                            </tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

